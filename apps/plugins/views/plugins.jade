		script.
			$(function() {
				$('body').mcjs();
				
				$('a#loadItems').on('click', function(e){
					e.preventDefault();
					$.ajax({
						url: '/plugins/loadItems', 
						type: 'get',
						dataType: 'json'
					}).done(function(data){	
						console.log(data)
					});
				});
				
			});
	body
		#header
			a.backlink(href="/") 
				img(src="/core/icons/back.png")
			h1  Plugins		
		#wrapper
			a#loadItems.btn load	