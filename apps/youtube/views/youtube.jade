doctype 5
html(lang="en")
	head
		// Core inclusion
		link(rel='stylesheet', href='/core/css/style.css')
		link(rel='stylesheet', href='/youtube/css/cards.css')
		script(src="/core/js/jquery-1.8.2.min.js")
		script(src="/core/js/jquery.mcjs.core.js")
		style.
			.map {
				background-image: url(#{locals.image});
				background-position:center;
			}

		title Youtube
		script.
			$(function(){
				$('body').mcjs();
			});
	body
		#backdrop
			img.backdropimg(src="")
		#wrapper
			a.backlink(href="/") 
				img(src="/core/icons/back.png")
			if locals.error
				h1 #{locals.error}
			else 
				h1 Top Trending
			main
				section.card
					div.map
					h2
						strong #{locals.title}
					h3 #{locals.channelTitle} - #{locals.viewCount} views