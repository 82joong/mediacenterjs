doctype 5
html(lang="en")
	head		
		title Movies
		
		// Core inclusion
		link(rel='stylesheet', href='/core/css/style.css')
		script(src="/core/js/jquery-1.8.2.min.js")
		script(src="/core/js/jquery.mcjs.core.js")
		
		
		// App specific
		link(rel='stylesheet', href='/movies/css/style.css')
		script(src="/movies/js/jquery.carouFredSel-6.1.0-packed.js")
		script(src="/movies/js/jquery.mcjs.movies.js")
		script(src="/core/js/plugins/socket.io.js")

		script
			var socket = io.connect('http://localhost:300');
			socket.on('chat', function (msg) {
				$('#messagesystem').html(msg);
			});
		
			$(document).ready(function(){
				$('body').mcjs();
				$('body').mcjsm();
			});

	body
		#configuration=configuration
		#messagesystem
		#backdrop
			img.backdropimg(src="/core/css/img/homepage.jpg")	
		#wrapper
			a.backlink(href="/") 
				img(src="/core/icons/back.png")
			h1 Movies
			#moviebrowser
				.posterview
					ul.movieposters
						each movie in movies
							li.movieposter 
								.info
									a.moviedetails(href="/movies/"+ movie.movieTitle  + "/details/") 
										img(src="/movies/img/info.png")
								a.play(href="/movies/play/"+ movie.filename)
									img(src="/movies/img/loading.gif").movieposter							
								span.title= movie
			a#prev
			a#next
		a#view
			img(src="/core/icons/view.png")
		a#update(href="/movies/update/")
			img(src="/core/icons/refresh.png")
		a#settings(href="/settings/")
			img(src="/core/icons/settings.png")