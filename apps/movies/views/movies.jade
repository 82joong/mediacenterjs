doctype 5
html(lang="en")
	head		
		title Movies
		
		// Core inclusion
		link(rel='stylesheet', href='/core/css/style.css')
		script(src="/core/js/jquery-1.8.2.min.js")
		script(src="/core/js/jquery.mcjs.core.js")
		
		link (rel='stylesheet', href='/core/css/video-js.css')
		script (src="/core/js/plugins/video-js.js")
		//script(src="/core/js/plugins/jquery.carouFredSel-6.1.0-packed.js")
		
		// App specific
		link(rel='stylesheet', href='/movies/css/style.css')
		script(src="/movies/js/jquery.mcjs.movies.js")


		script
			$(document).ready(function(){
				$('body').mcjs();
				$('body').mcjsm();
			});
	body
		#backdrop
			img.backdropimg(src="/core/css/img/homepage.jpg")	
		#header
			a.backlink(href="/") 
				img(src="/core/icons/back.png")
			h1 #{lingua.movies}		
		#wrapper
			#moviebrowser
				if status !== null
					p.gui= status
				else
					.posterview
						ul.movieposters
							each movie in movies
								li.movieposter 
									a.play(data-movie= movie)
										img(src="/movies/img/loading.gif").movieposter							
									span.original_name	Loading...
									span.title= movie		
