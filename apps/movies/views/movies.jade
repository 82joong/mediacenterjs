doctype 5
html(lang="en")
	head		
		title Movies
		
		// Core inclusion
		link(rel='stylesheet', href='/core/css/style.css')
		script(src="/core/js/jquery-1.8.2.min.js")
		script(src="/core/js/jquery.mcjs.core.js")
		
		link (rel='stylesheet', href='/core/css/video-js.css')
		script(src="/core/js/plugins/video-js.js")
		
		
		link(rel='stylesheet', href='/core/css/jquery.jscrollpane.css')
		script(src="/core/js/plugins/jquery.jscrollpane.min.js")
		script(src="/core/js/plugins/jquery.mousewheel.min.js")
		
		// App specific
		link(rel='stylesheet', href='/movies/css/style.css')
		script(src="/movies/js/jquery.mcjs.movies.js")

		
		script
			$(document).ready(function(){
				//$('.movies').jScrollPane();
				$('body').mcjs();
				$('body').mcjsm();	
			});
	body
		#backdrop
			img.backdropimg(src="/movies/img/backdrop.jpg")	
		#header
			a.backlink(href="/") 
				img(src="/core/icons/back.png")
			h1 #{lingua.movies}		
		#wrapper
			#moviebrowser
				if status !== null
					p.gui= status
				else
					ul.movies
						each movie in movies
							li.movieposter 
								img(src="/movies/img/loading.gif").movieposter							
								span.title= movie		
								.overview
								.playbtn(data-movie= movie) Play